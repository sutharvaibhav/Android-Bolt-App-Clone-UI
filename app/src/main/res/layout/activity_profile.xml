<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="22dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/shape1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ask"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:fontFamily="@font/segoeui"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:id="@+id/creHead"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/creHead"
        app:layout_constraintTop_toBottomOf="@id/creHead"
        android:layout_marginTop="50dp"
        android:text="Name"
        android:fontFamily="@font/segoeui"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:id="@+id/nameTxt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/nameTxt"
        app:layout_constraintTop_toBottomOf="@id/nameTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:id="@+id/nameEt"
        android:text="Istiak mahmud Remon"
        android:fontFamily="@font/segoeui"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/nameTxt"
        app:layout_constraintTop_toBottomOf="@id/nameEt"
        android:layout_marginTop="20dp"
        android:text="Address lane"
        android:fontFamily="@font/segoeui"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:id="@+id/addTxt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/addTxt"
        app:layout_constraintTop_toBottomOf="@id/addTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPostalAddress"
        android:id="@+id/addEt"
        android:text="Shewrapara 958"
        android:fontFamily="@font/segoeui"
        android:textSize="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/addTxt"
        app:layout_constraintTop_toBottomOf="@id/addEt"
        android:layout_marginTop="20dp"
        android:text="City"
        android:fontFamily="@font/segoeui"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:id="@+id/eTxt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/eTxt"
        app:layout_constraintTop_toBottomOf="@id/eTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:id="@+id/eEt"
        android:text="Dhaka"
        android:fontFamily="@font/segoeui"
        android:textSize="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/eTxt"
        app:layout_constraintTop_toBottomOf="@id/eEt"
        android:layout_marginTop="20dp"
        android:text="Gender"
        android:fontFamily="@font/segoeui"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:id="@+id/pcTxt"/>

    <EditText
        android:id="@+id/pcEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/segoeui"
        android:inputType="textEmailAddress"
        android:text="Male"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/pcTxt"
        app:layout_constraintTop_toBottomOf="@id/pcTxt" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/pcTxt"
        app:layout_constraintTop_toBottomOf="@id/pcEt"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:fontFamily="@font/segoeui"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:id="@+id/emTxt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/emTxt"
        app:layout_constraintTop_toBottomOf="@id/emTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:id="@+id/emEt"
        android:text="Helloistiak@gmail.com"
        android:fontFamily="@font/segoeui"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/emTxt"
        app:layout_constraintTop_toBottomOf="@id/emEt"
        android:layout_marginTop="20dp"
        android:text="Phone Number"
        android:fontFamily="@font/segoeui"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:id="@+id/pnTxt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/pnEt"
        app:layout_constraintTop_toBottomOf="@id/pnTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:id="@+id/pnEt"
        android:text="+880123456789"
        android:fontFamily="@font/segoeui"
        android:textSize="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>