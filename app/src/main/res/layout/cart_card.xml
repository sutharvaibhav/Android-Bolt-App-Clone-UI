<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:elevation="20dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="0dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        >

    <ImageView
        android:id="@+id/cartImg"
        android:layout_width="120dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cProName"
        app:layout_constraintBottom_toBottomOf="@id/qtybtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/feat1"/>
    <TextView
        android:id="@+id/cProName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Woman t- shirt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cartImg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/segoeui"
        android:textSize="16dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/cProC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lotto.LTD"
        app:layout_constraintTop_toBottomOf="@id/cProName"
        app:layout_constraintStart_toStartOf="@id/cProName"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoeui"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cProR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$34.00"
        app:layout_constraintTop_toBottomOf="@id/cProC"
        app:layout_constraintStart_toStartOf="@id/cProC"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoeui"
        android:textSize="16dp"
        android:textColor="#374ABE"/>

    <ImageView
        android:layout_width="11.5dp"
        android:layout_height="11.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/cross"/>

    <include
        android:id="@+id/qtybtn"
        layout="@layout/qtybutton"
        android:layout_width="114dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/cProR"
        app:layout_constraintStart_toStartOf="@id/cProR"
        android:layout_marginTop="10dp"
        app:circularflow_radiusInDP="5"
        /></androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


